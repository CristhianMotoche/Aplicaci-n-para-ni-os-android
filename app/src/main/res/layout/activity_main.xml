
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/Main"
    android:background="#ff029acb">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="MenÃº de Inicio"
                android:id="@+id/textTitle"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textStyle="bold|italic"
                android:textColor="#FF4C2D52"
                android:layout_gravity="center_horizontal" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:src="@drawable/ic_launcher"
            android:layout_below="@+id/textTitle"
            android:layout_marginTop="47dp"
            android:layout_marginBottom="30dp"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FIGURAS"
            android:id="@+id/btnIniciar"
            android:background="#ff4c2d52"
            android:textSize="40dp"
            android:layout_below="@+id/imageView"
            android:layout_alignLeft="@+id/btnJuego"
            android:layout_alignStart="@+id/btnJuego"
            android:layout_marginTop="10dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JUEGO"
            android:id="@+id/btnJuego"
            android:background="#ff4c2d52"
            android:textSize="40dp"
            android:layout_below="@+id/btnIniciar"
            android:layout_alignLeft="@+id/btnIniciar"
            android:layout_alignStart="@+id/btnIniciar"
            android:layout_marginTop="10dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABOUT"
            android:id="@+id/btnAbout"
            android:background="#ff4c2d52"
            android:textSize="40dp"
            android:layout_below="@+id/btnJuego"
            android:layout_alignLeft="@+id/btnJuego"
            android:layout_alignStart="@+id/btnJuego"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SALIR"
            android:id="@+id/btnSalir"
            android:background="#ff4c2d52"
            android:textSize="40dp"
            android:layout_below="@+id/btnIniciar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
