<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/fondo_menu">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/foto1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_launcher"
                android:layout_alignTop="@+id/foto3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="60dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/foto3"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_launcher"
                android:layout_marginRight="33dp"
                android:layout_marginEnd="33dp"
                android:layout_alignTop="@+id/foto2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="60dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/foto4"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_launcher"
                android:layout_below="@+id/foto3"
                android:layout_alignLeft="@+id/foto2"
                android:layout_alignStart="@+id/foto2"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="60dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/foto5"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_launcher"
                android:layout_alignTop="@+id/foto4"
                android:layout_alignLeft="@+id/foto3"
                android:layout_alignStart="@+id/foto3" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>