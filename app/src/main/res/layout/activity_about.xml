<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearAbout"
    android:background="#ff029acb">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Esta aplicación fue creada para ayudar a los niños que por motivos de fuerza mayor no pueden asistir a clase presencialmente.
        \nDesarrolladores:
        \n\tStalin Aguirre \n\tSebastián Ávalos \n\tDavid Dávila \n\tDavid Moncayo \n\tCristhian Motoche"
        android:id="@+id/textView"
        android:textColor="#ff000000"
        android:layout_margin="8dp" />

</LinearLayout>